generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          String   @id @default(uuid())
  clerkUserId String   @unique
  email       String   @unique
  firstName   String
  lastName    String
  createdAt   DateTime @default(now())
}

model BlurbRequest {
  id              String         @id @default(uuid())
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  brandName       String
  theme           String
  description     String
  links           String
  targetAudience  String
  includeEmojis   Boolean
  includeHashtags Boolean
  variants        BlurbVariant[]
}

model BlurbVariant {
  id             String       @id @default(uuid())
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  content        String       @db.Text
  platformName   String
  blurbRequestId String
  platform       Platform     @relation(fields: [platformName], references: [name])
  BlurbRequest   BlurbRequest @relation(fields: [blurbRequestId], references: [id])

  @@index([platformName])
  @@index([blurbRequestId])
}

model Platform {
  name          String         @id
  blurbVariants BlurbVariant[]
}
